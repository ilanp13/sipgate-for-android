<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<TextView android:layout_height="wrap_content"
		android:background="#808080" android:textColor="#ffffff" android:text="A"
		android:layout_width="fill_parent" android:id="@+id/ContactsLetterTextView"
		android:paddingLeft="5dip" android:textStyle="bold"></TextView>

	<LinearLayout android:id="@+id/ContactsRow"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:orientation="vertical" android:minHeight="56dp">
		<LinearLayout android:id="@+id/ContactsImageName"
			android:orientation="horizontal" android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:layout_gravity="top" android:paddingTop="13dp" >
			
			<TextView android:id="@+id/contactName" android:text="Vorname Nachname"
				android:textColor="#FFFFFF" android:layout_width="wrap_content"
				android:paddingLeft="5dp" android:layout_gravity="center_vertical"
				android:layout_height="wrap_content" android:textSize="20dp" />
		</LinearLayout>
	</LinearLayout>

</LinearLayout>
