<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="#000000">
	<ScrollView android:id="@+id/sipgateSimpleSettingsScroller"
		android:layout_width="fill_parent" android:layout_height="fill_parent">
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="vertical" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:background="#000000">

			<!-- ####################### -->
			<!-- Main Layout starts here -->
			<!-- ####################### -->

			<!-- Spacer Line -->
			<View android:layout_height="1px" android:layout_width="fill_parent"
				android:background="#888888" />

			<!-- Account Settings Row -->
			<LinearLayout android:id="@+id/sipgateSettingsAccountRow"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:orientation="vertical">
				<TextView android:text="@string/simple_settings_account"
					android:padding="3dip" android:layout_marginTop="5dip"
					android:textSize="20dip" android:textColor="#FFFFFF"
					android:layout_width="fill_parent" android:layout_height="wrap_content" />
				<TextView android:text="x" android:padding="3dip"
					android:layout_marginBottom="5dip" android:id="@+id/sipgateSettingsAccount"
					android:textSize="15dip" android:layout_width="fill_parent"
					android:layout_height="wrap_content" />
			</LinearLayout>

			<!-- Spacer Line -->
			<View android:layout_height="1px" android:layout_width="fill_parent"
				android:background="#888888" />

			<!-- Telephone Chooser Row -->
			<LinearLayout android:id="@+id/sipgateSettingsExtensionRow"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:orientation="vertical">
				<TextView android:layout_marginTop="5dip"
					android:text="@string/simple_settings_extension" android:padding="3dip"
					android:textSize="20dip" android:textColor="#FFFFFF"
					android:layout_width="fill_parent" android:layout_height="wrap_content" />
				<TextView android:text="x" android:layout_marginBottom="5dip"
					android:padding="3dip" android:id="@+id/sipgateSettingsExtension"
					android:textSize="15dip" android:layout_width="fill_parent"
					android:layout_height="wrap_content" />
			</LinearLayout>

			<!-- Spacer Line -->
			<View android:layout_height="2px" android:layout_width="fill_parent"
				android:background="#888888" />

			<!-- Account Balance Row -->
			<LinearLayout android:id="@+id/sipgateSettingsBalanceGroup"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:orientation="vertical">
				<TextView android:layout_column="1"
					android:text="@string/simple_settings_balance" android:padding="3dip"
					android:textSize="20dip" android:textColor="#FFFFFF"
					android:layout_marginTop="5dip" android:layout_width="fill_parent"
					android:layout_height="wrap_content" />
				<TextView android:text="x" android:layout_column="1"
					android:padding="3dip" android:layout_marginBottom="5dip"
					android:id="@+id/sipgateSettingsBalance" android:textSize="15dip"
					android:layout_width="fill_parent" android:layout_height="wrap_content" />

				<!-- Spacer Line -->
				<View android:layout_height="2px" android:layout_width="fill_parent"
					android:background="#888888" />
			</LinearLayout>

			<!-- VoIP over WLAN Row -->
			<TableLayout android:id="@+id/sipgateSettingsWirelessRow"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:stretchColumns="1">
				<TableRow android:layout_height="wrap_content"
					android:layout_width="fill_parent">
					<TextView android:layout_column="1"
						android:text="@string/simple_settings_wlan" android:padding="3dip"
						android:textSize="20dip" android:textColor="#FFFFFF" android:layout_marginTop="10dip" android:layout_marginBottom="10dip"/>
					<CheckBox android:id="@+id/sipgateSettingsWireless"
						android:layout_column="2" android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:layout_marginTop="10dip" android:layout_marginBottom="10dip" />
				</TableRow>
			</TableLayout>

			<!-- Spacer Line -->
			<View android:layout_height="1px" android:layout_width="fill_parent"
				android:background="#888888" />

			<!-- VoIP over 3G Row -->
			<TableLayout android:id="@+id/sipgateSettings3GRow"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:stretchColumns="1">

				<TableRow android:layout_height="wrap_content"
					android:layout_width="fill_parent">
					<TextView android:layout_column="1"
						android:text="@string/simple_settings_3g" android:padding="3dip"
						android:textSize="20dip" android:textColor="#FFFFFF" android:layout_marginTop="10dip" android:layout_marginBottom="10dip" />
					<CheckBox android:id="@+id/sipgateSettings3G"
						android:layout_column="2" android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:layout_marginTop="10dip" android:layout_marginBottom="10dip" />
				</TableRow>
			</TableLayout>

			<!-- Spacer Line -->
			<View android:layout_height="2px" android:layout_width="fill_parent"
				android:background="#888888" />

			<!-- Advanced Settings Row -->
			<LinearLayout android:id="@+id/sipgateSettingsAdvancedRow"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:orientation="vertical">
				<TextView android:layout_marginTop="15dip" android:layout_marginBottom="15dip"
					android:text="@string/simple_settings_advanced" android:padding="3dip"
					android:textSize="20dip" android:textColor="#FFFFFF"
					android:layout_width="fill_parent" android:layout_height="wrap_content" />
			</LinearLayout>

			<!-- Spacer Line -->
			<View android:layout_height="2px" android:layout_width="fill_parent"
				android:background="#888888" />

			<!-- Event Refresh Settings Row -->
			<LinearLayout android:id="@+id/sipgateSettingsRefreshRow"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:orientation="vertical">
				<TextView android:layout_marginTop="15dip" android:layout_marginBottom="15dip"
					android:text="@string/simple_settings_refresh_timers"
					android:padding="3dip" android:textSize="20dip" android:textColor="#FFFFFF"
					android:layout_width="fill_parent" android:layout_height="wrap_content" />
			</LinearLayout>

			<!-- ##################### -->
			<!-- Main Layout ends here -->
			<!-- ##################### -->

		</LinearLayout>
	</ScrollView>
</LinearLayout>
